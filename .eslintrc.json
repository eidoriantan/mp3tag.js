{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "standard",
  "rules": { "max-len": ["error", 80] },
  "noInlineConfig": true,
  "ignorePatterns": ["dist", "node_modules"]
}
