{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "standard",
  "rules": {
    "import/no-duplicates": "off",
    "max-len": ["error", 80]
  },
  "noInlineConfig": true,
  "ignorePatterns": ["dist"]
}
